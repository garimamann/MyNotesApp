<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        tools:context=".Activities.UserInputActivity">

    <Button
            android:id="@+id/activity_user_input_set_date_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_date_button"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="25dp"/>


    <EditText
            android:id="@+id/activity_user_input_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/user_input_hint"
            android:layout_marginTop="35dp"
            android:layout_margin="20dp"/>

    <Button
            android:id="@+id/activity_user_input_submit_button"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:text="Submit"

            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

</LinearLayout>